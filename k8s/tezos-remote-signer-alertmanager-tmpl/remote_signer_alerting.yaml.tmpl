apiVersion: monitoring.coreos.com/v1
kind: Alertmanager
metadata:
  name: monitoring-prom-prometheus-alertmanager-${custname}
  labels:
    release: alertmanager-${custname}
    app: prometheus-operator-alertmanager-${custname}
spec:
  baseImage: quay.io/prometheus/alertmanager
  externalUrl: http://monitoring-prom-prometheus-alertmanager.monitoring:9093
  listenLocal: false
  logFormat: logfmt
  logLevel: info
  paused: false
  portName: web
  replicas: 1
  retention: 120h
  routePrefix: /
  securityContext:
    fsGroup: 2000
    runAsGroup: 2000
    runAsNonRoot: true
    runAsUser: 1000
  serviceAccountName: monitoring-prom-prometheus-alertmanager
  version: v0.21.0
---
apiVersion: v1
kind: Secret
metadata:
  name: alertmanager-monitoring-prom-prometheus-alertmanager-${custname}
  labels:
    release: alertmanager-${custname}
    app: prometheus-operator-alertmanager-${custname}
stringData:
  config.yml: |-
    global:
      slack_api_url: "${monitoring_slack_url}"
      resolve_timeout: 5m
    route:
      group_by: ['job']
      group_wait: 30s
      group_interval: 5m
      repeat_interval: 12h
      routes:
      - match:
          alertname: NoRemoteSigner
        receiver: 'slack'
      - match:
          alertname: SignerPowerLoss
        receiver: 'slack'
      - match:
          alertname: SignerWiredNetworkLoss
        receiver: 'slack'
      - match:
          alertname: SignerWirelessNetworkLoss
        receiver: 'slack'
      - receiver: 'null'
    receivers:
    - name: 'null'
    - name: 'slack'
      slack_configs:
      - channel: "#infra"
        send_resolved: true
        icon_url: https://avatars3.githubusercontent.com/u/3380462
        title: |-
          [{{ .Status | toUpper }}{{ if eq .Status "firing" }}:{{ .Alerts.Firing | len }}{{ end }}] {{ .CommonLabels.alertname }} for {{ .CommonLabels.job }}
          {{- if gt (len .CommonLabels) (len .GroupLabels) -}}
            {{" "}}(
            {{- with .CommonLabels.Remove .GroupLabels.Names }}
              {{- range $index, $label := .SortedPairs -}}
                {{ if $index }}, {{ end }}
                {{- $label.Name }}="{{ $label.Value -}}"
              {{- end }}
            {{- end -}}
            )
          {{- end }}
        text: >-
          {{ range .Alerts -}}
          *Alert:* {{ .Annotations.title }}{{ if .Labels.severity }} - `{{ .Labels.severity }}`{{ end }}
    
          *Description:* {{ .Annotations.description }}
    
          *Details:*
            {{ range .Labels.SortedPairs }} â€¢ *{{ .Name }}:* `{{ .Value }}`
            {{ end }}
          {{ end }}
