bases:
  - ./../tezos-remote-signer-loadbalancer-base

nameSuffix: -stlm

imageTags:
  - name: tezos-remote-signer-loadbalancer
    newName: gcr.io/${project}/tezos-remote-signer-loadbalancer
    newTag: ${kubernetes_namespace}-latest

configMapGenerator:
- name: tezos-remote-signer-loadbalancer-configmap
  literals:
  - PUBLIC_BAKING_KEY="${baking_nodes["custnode"]["stlm"]["public_baking_key"]}"
  - SIGNER_A_PORT="${baking_nodes["custnode"]["stlm"]["authorized_signers"][0]["signer_port"]}"
  - SIGNER_B_PORT="${baking_nodes["custnode"]["stlm"]["authorized_signers"][1]["signer_port"]}"
